generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  password   String
  role       Role        @default(USER)
  createdAt  DateTime    @default(now())
  events     Event[]     @relation("UserEvents")
  reviews    Review[]
  forumPosts ForumPost[]

  @@map("users")
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String
  createdBy   User        @relation("UserEvents", fields: [createdById], references: [id])
  createdById String
  reviews     Review[]

  @@map("events")
}

model Review {
  id          String      @id @default(uuid())
  content     String
  rating      Int         @default(1) // Rating între 1 și 5
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  event       Event?      @relation(fields: [eventId], references: [id])
  eventId     String?
  attraction  Attraction? @relation(fields: [attractionId], references: [id])
  attractionId String?

  @@map("reviews")
}

model Attraction {
  id          String      @id @default(uuid())
  name        String
  description String
  location    String
  x           Float
  y           Float
  z           Float
  imagePath   String
  reviews     Review[]

  @@map("attractions")
}

model ForumPost {
  id        String      @id @default(uuid())
  title     String
  content   String
  user      User        @relation(fields: [userId], references: [id])
  userId    String

  @@map("forum_posts")
}

enum Role {
  USER
  ADMIN
}