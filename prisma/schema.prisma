generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  events    Event[]  @relation("UserEvents")
  reviews   Review[]
  forumPosts ForumPost[]

  @@map("users")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  createdBy   User     @relation("UserEvents", fields: [createdById], references: [id])
  createdById Int
  reviews     Review[]

  @@map("events")
}

model Review {
  id          Int      @id @default(autoincrement())
  content     String
  rating      Int      @default(1) // Rating între 1 și 5
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     Int?
  attraction  Attraction? @relation(fields: [attractionId], references: [id])
  attractionId Int?

  @@map("reviews")
}

model Attraction {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  location    String
  x           Float
  y           Float
  z           Float
  reviews     Review[]

  @@map("attractions")
}

model ForumPost {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())

  @@map("forum_posts")
}

enum Role {
  USER
  ADMIN
}
