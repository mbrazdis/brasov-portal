generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  name       String
  email      String      @unique
  password   String
  role       Role        @default(USER)
  createdAt  DateTime    @default(now())
  reviews    Review[]
  forumPosts ForumPost[]

  @@map("users")
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  location    String
  isActive    Boolean  @default(true)
  reviews     Review[]

  @@map("events")
}

model News {
  id        String   @id @default(uuid())
  title     String
  content   String
  date      DateTime
  imagePath String
  isActive  Boolean  @default(true)

  @@map("news")
}

model Review {
  id           String      @id @default(uuid())
  content      String
  rating       Int         @default(1)
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  event        Event?      @relation(fields: [eventId], references: [id])
  eventId      String?
  attraction   Attraction? @relation(fields: [attractionId], references: [id])
  attractionId String?

  @@map("reviews")
}

model Attraction {
  id          String   @id @default(uuid())
  name        String
  map_name    String
  description String
  location    String
  camera_x    Float
  camera_y    Float
  camera_z    Float
  target_x    Float
  target_y    Float
  target_z    Float
  imagePath   String
  isActive    Boolean  @default(true)
  reviews     Review[]

  @@map("attractions")
}

model ForumPost {
  id      String @id @default(uuid())
  title   String
  content String
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  @@map("forum_posts")
}

enum Role {
  USER
  ADMIN
}
